{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "instructions": ["./AGENTS.md"],
  "permission": {
    "edit": "ask",
    "write": "ask",
    "bash": "ask"
  },
  "skills": {
    "paths": [".opencode/skills"]
  },
  "commands": {
    "init-context": {
      "agent": "librarian"
    },
    "sync-context": {
      "agent": "librarian"
    },
    "detect-drift": {
      "agent": "librarian"
    },
    "generate-release": {
      "agent": "guardian"
    },
    "security-scan": {
      "agent": "sentinel"
    },
    "code-review": {
      "agent": "code-reviewer"
    },
    "run-tests": {
      "agent": "test-engineer"
    },
    "refactor": {
      "agent": "engineer"
    },
    "debug": {
      "agent": "engineer"
    },
    "explain": {
      "agent": "beagle"
    },
    "migrate": {
      "agent": "engineer"
    },
    "audit": {
      "agent": "sentinel"
    },
    "chores": {
      "agent": "guardian"
    },
    "docs": {
      "agent": "technical-writer"
    },
    "tests": {
      "agent": "test-engineer"
    },
    "explain-context": {
      "agent": "librarian"
    },
    "revert-milestone": {
      "agent": "librarian"
    }
  }
}
